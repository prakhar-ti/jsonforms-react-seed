{
  "type": "object",
  "properties": {
    "project": {
      "title": "Project Name",
      "type": "object",
      "properties": {
        "name": {
          "type":"string",
          "label": "Project Name"
        },

        "slug": {
          "type": "string",
          "label": "Project Slug"
        },

        "description": {
          "type": "string",
          "label": "Project Description"
        },

        "owner": {
          "type": "string",
          "label": "Project Owner"
        },

        "contact_email": {
          "type": "string",
          "label": "Contact EMail"
        }
      }
    },

    "documentation": {
      "title": "Documentation",
      "type": "boolean"
    },

    "collaboration": {
      "title": "Collaboration",
      "type": "boolean"
    },

    "ci_cd": {
      "title": "CI/ CD",
      "type": "boolean"
    },

    "custom_container": {
      "title": "Custom Container", 
      "type": "boolean"
    },

    "custom_container_link": {
      "title": "Custom Container Link", 
      "type": "string"
    },


    "collaboration_options": {
      "properties": {

        "github_project_board": {
          "title": "Create GitHub Project Board", 
          "type": "boolean"
        },
        "google_chat_space": {
          "title": "Create Google Chat Space", 
          "type": "boolean"
        }
      }
    },


    "documentation_options": {
      "type": "object",
      "properties": {
        "google_site": {
          "title": "Create a Google Site",
          "type": "boolean"
        },

        "drive_folder": {
          "title": "Create Drive Folder",
          "type": "boolean"
        },

        "drive_folder_options": {
          "type": "object",
          "properties": {
            "6_pager": {
              "title": "6 Pager Documentation",
              "type": "boolean"
            },

            "1_pager": {
              "title": "1 Pager Documentation",
              "type": "boolean"
            },

            "competitor_analysis": {
              "title": "Competitor Analysis",
              "type": "boolean"
            },

            "experiment": {
              "title": "Experiment Template",
              "type": "boolean"
            },

            "itd": {
              "title": "ITD Template",
              "type": "boolean"
            },

            "market_research": {
              "title": "Market Research Template",
              "type": "boolean"
            },

            "research": {
              "title": "Research Template",
              "type": "boolean"
            },

            "user_stories": {
              "title": "User Stories Template",
              "type": "boolean"
            },

            "github_readme": {
              "title": "GitHub Readme",
              "type": "boolean"
            },

            "swagger": {
              "title": "Swagger",
              "type": "boolean"
            }
          }
        }
      }
    },


    "ci_cd_options": {
      "type": "object",
      "properties": {
        "linting" : {
          "title": "Lint the Code",
          "type":"boolean"
        },

        "testing" : {
          "title": "Run Tests",
          "type":"boolean"
        },

        "code_analysis" : {
          "title": "Code Analysis",
          "type":"boolean"
        },

        "deployment" : {
          "title": "Setup Deployment",
          "type":"boolean"
        }
      }
    },

    
    "app_options": {
      "type": "object",
      "properties": {

        "apps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "enum": ["Django (Recommended for API servers)", "React (Recommended for Frontend)"]
              }
            }
          }
        },

        "django_config": {
          "type": "object",
          "properties": {

            "repo_name": {
              "type": "string"
            },
            
            "organization_name": {
              "type": "string"
            },

            "testing": {
              "type": "object",
              "properties": {

                "sample_tests": {
                  "type": "boolean"
                },

                "test_runner_script": {
                  "type": "object"
                }
              }
            },

            "logging": {
              "type": "object",
              "properties": {

                "enabled": {
                  "type": "boolean"
                },

                "logging_type": {
                  "type":"string",
                  "enum": ["Default", "Structlog"]
                }
              }
            },

            "tracing": {
              "type": "object",
              "properties": {
                
                "enabled":{
                  "type": "boolean"
                },

                "log_type": {
                  "type": "string",
                  "enum": ["Default", "X-Ray"]
                }

              }
            },

            "authentication": {
              "type": "object",
              "properties": {

                "rest": {
                  "type": "boolean"
                },

                "aws_cognito": {
                  "type":"object",
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    },

                    "key": {
                      "type": "string"
                    }
                  }
                },

                "social": {
                  "type":"object",
                  "properties": {
                      "enabled": {
                        "type": "boolean"
                      }
                    }
                  }
                },

                "devconnect": {
                  "type":"object",
                  "properties": {
                    "enabled": {
                      "type":"boolean"
                    }
                  }
                }
              },

            "dockerfile": {
              "title": "Add a Dockerfile",
              "type": "boolean"
            },

            "gitpod": {
              "title": "Add a .gitpod Config",
              "type": "boolean"
            },

            "iac": {
              "title": "Generate IaC (CDK)",
              "type": "boolean"
            },
            
            "debugging": {
              "title": "Setup Local Debugging (VS Code)",
              "type": "boolean"
            },

            "secret_manager": {
              "title": "Use Secret Manager in Production (Recommended)",
              "type": "boolean"
            },

            "quicksight": {
              "title": "Quicksight",
              "type": "boolean"
            },

            "database": {
              "type": "object",
              "properties": {
                
                "type": {
                  "type":"string",
                  "enum": ["SQLite", "PostgreSQL", "DynamoDB"]
                },

                "sample_crud": {
                  "type": "boolean"
                }
              }
            },

            "readme": {
              "type": "object",
              "properties": {
                
                "enabled": {
                  "type": "boolean"
                },

                "local_setup": {
                  "type": "boolean"
                },

                "folder_structure": {
                  "type": "boolean"
                },

                "demo_curl_requests": {
                  "type": "boolean"
                }
              }
            },

            "linter": {
              "type": "object",
              "properties": {

                "enabled": {
                  "type": "boolean"
                },

                "tool": {
                  "type": "string",
                  "enum": ["PyLint", "Black", "PyFlakes", "Isort"] 
                }
              }
            }
          }
        }
      }
    },

    "deployment_options": {
      "type": "object",
      "properties": {
        "deployment_type": {
          "type": "string",
          "enum": ["ECS", "EKS"]
        }
      } 
    }
  }
}
